@model List<TrashCollection.Models.Transactions>
@{
    ViewBag.Title = "AccountHistory";
}

<h2>AccountHistory</h2>

@if (Model.Count() == 0)
{
    <div>There is no history for this Account</div>
}
else
{
     <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>History</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var transaction in Model)
        {
            <tr>
                <td>Date: @transaction.Date</td>
                @if (transaction.Charges != null)
                {
                    <td> Charge:$ @transaction.Charges</td>
                }
                @if (transaction.Payment != null)
                {
                    <td> Payment: $@transaction.Payment</td>
                }
                <td>Balance: $@transaction.Balance</td>
            </tr>
        }
            </tbody>
            </table>
}
