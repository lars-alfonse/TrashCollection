@model TrashCollection.Models.UserAddressDayJunction
@{
    ViewBag.Title = "AddDay";
}

<h2>AddDay</h2>
<h2>Add Address</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Select a Pickup day</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(Model => Model.Day, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Day.Id, (SelectList)ViewBag.Name, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(model => model.UserAddress.ID);
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}